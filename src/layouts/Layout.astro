---
import Sidebar from '../components/Sidebar.astro';
import MobileProfile from '../components/MobileProfile.astro';
import '../styles/global.css';
---
<html lang="en">
<head>
	<title>Eugene Belikov — Portfolio</title>
	<meta charset="utf-8" />
	<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	<meta name="viewport" content="width=device-width" />
	<meta name="generator" content={Astro.generator} />
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />

	<!-- SEO & Social Meta Tags -->
	<meta name="description" content="Portfolio of developer Eugene Belikov. Projects, skills, experience, contacts." />
	<meta name="keywords" content="Eugene Belikov, portfolio, developer, web, JavaScript, Astro, Tailwind, projects" />

	<!-- Open Graph / Facebook -->
	<meta property="og:title" content="Eugene Belikov — Portfolio" />
	<meta property="og:description" content="Portfolio of developer Eugene Belikov. Discover my projects and skills." />
	<meta property="og:type" content="website" />
	<meta property="og:url" content="https://yevblk.github.io/" />
	<meta property="og:image" content="https://yevblk.github.io/me.jpg" />

	<!-- Twitter -->
	<meta name="twitter:card" content="summary_large_image" />
	<meta name="twitter:title" content="Eugene Belikov — Portfolio" />
	<meta name="twitter:description" content="Portfolio of developer Eugene Belikov. Discover my projects and skills." />
	<meta name="twitter:image" content="https://yevblk.github.io/me.jpg" />
</head>
<body>
<div class="flex flex-col lg:flex-row min-h-screen bg-background font-sans text-text">
	<Sidebar />
    <!-- Mobile Navigation Bar -->
    <nav id="mobile-nav" class="fixed bottom-0 left-0 right-0 z-40 md:hidden flex justify-around items-center bg-background/90 backdrop-blur border-t border-accent/10 py-2 px-2 shadow-lg">
      <a href="#about" data-section="about" class="mobile-nav-link flex flex-col items-center text-xs font-semibold text-text hover:text-accent transition-colors">
        <i class="fa-solid fa-user text-lg transition-colors"></i>
        About
      </a>
      <a href="#projects" data-section="projects" class="mobile-nav-link flex flex-col items-center text-xs font-semibold text-text hover:text-accent transition-colors">
        <i class="fa-solid fa-folder-open text-lg transition-colors"></i>
        Projects
      </a>
      <a href="#contact" data-section="contact" class="mobile-nav-link flex flex-col items-center text-xs font-semibold text-text hover:text-accent transition-colors">
        <i class="fa-solid fa-envelope text-lg transition-colors"></i>
        Contact
      </a>
    </nav>
	<main class="flex-1 ml-0 lg:ml-[280px] px-2 sm:px-4 md:px-8 py-6 sm:py-8 flex flex-col gap-8 vertical-sidebar-main">
		<div class="content-wrapper">
			<MobileProfile />
			<slot />
		</div>
	</main>
</div>
<script is:inline>
  const links = document.querySelectorAll('.mobile-nav-link');
  const ids = ['about', 'projects', 'contact'];
  function highlightNav() {
    let active = ids[0];
    for (const id of ids) {
      const el = document.getElementById(id);
      if (el && el.getBoundingClientRect().top <= 80) active = id;
    }
    links.forEach(link => {
      link.classList.toggle('text-accent', link.dataset.section === active);
      link.classList.toggle('text-text', link.dataset.section !== active);
    });
  }
  function isMobile() {
    return window.matchMedia('(max-width: 767px)').matches;
  }
  function update() { if (isMobile()) highlightNav(); }
  window.addEventListener('scroll', update, { passive: true });
  window.addEventListener('resize', update);
  document.addEventListener('DOMContentLoaded', update);
</script>
</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
@media (min-width: 600px) and (max-width: 1023px) {
  .vertical-sidebar-main {
    margin-left: 64px !important;
  }
  .content-wrapper {
    width: 100%;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
    padding-left: 0;
    padding-right: 0;
  }
}
@media (max-width: 599px), (min-width: 1024px) {
  .content-wrapper {
    max-width: 48rem; /* ~768px, як max-w-3xl */
    margin-left: auto;
    margin-right: auto;
    width: 100%;
    padding-left: 0;
    padding-right: 0;
  }
}
</style>
