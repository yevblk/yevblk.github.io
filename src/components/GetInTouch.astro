<section id="contact" class="bg-background rounded-xl shadow-lg p-8 max-w-3xl mx-auto mb-12 text-center md:text-left font-sans">
  <h2 class="text-2xl sm:text-3xl md:text-4xl font-heading font-bold mb-4 text-text underline decoration-accent/30 underline-offset-4 drop-shadow font-serif">
    Get in touch
  </h2>
  <form 
    action="https://formsubmit.co/973e073785e6010daaf5a5a2b48f6036" 
    method="POST" 
    class="flex flex-col gap-4 w-full max-w-xl bg-background/80 p-6 rounded-2xl shadow-lg border border-accent/10 mx-auto"
  >
    <input type="hidden" name="_captcha" value="false">
    <label class="flex flex-col gap-1 text-left">
      <span class="font-semibold text-text">Name</span>
      <input 
        type="text" 
        name="name" 
        required 
        class="px-4 py-2 rounded-lg border border-accent/20 focus:border-accent outline-none bg-background text-text"
        placeholder="Your name"
      />
    </label>
    <label class="flex flex-col gap-1 text-left">
      <span class="font-semibold text-text">Email</span>
      <input 
        type="email" 
        name="email" 
        required 
        class="px-4 py-2 rounded-lg border border-accent/20 focus:border-accent outline-none bg-background text-text"
        placeholder="you@email.com"
      />
    </label>
    <label class="flex flex-col gap-1 text-left">
      <span class="font-semibold text-text">Message</span>
      <textarea 
        name="message" 
        required 
        rows="5"
        class="px-4 py-2 rounded-lg border border-accent/20 focus:border-accent outline-none bg-background text-text resize-none"
        placeholder="Type your message..."
      ></textarea>
    </label>
    <button 
      type="submit" 
      class="mt-2 px-6 py-2 rounded-lg bg-blue-700 text-white font-bold shadow hover:bg-blue-800 transition-colors duration-200"
    >
      Send
    </button>
  </form>
</section> 