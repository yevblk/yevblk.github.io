---
export interface Props {
  title: string;
  description: string;
  source?: string;
  demo?: string;
  stack?: string[];
}
const { title, description, source, demo, stack = [] } = Astro.props;
---
<article class="bg-background/80 rounded-xl p-6 shadow-md transition transform hover:scale-[1.03] flex flex-col h-full text-left items-start justify-start font-sans project-card reveal">
  <h3 class="text-xl font-bold mb-2 text-text font-serif">{title}</h3>
  <p class="text-text-muted mb-4 flex-1">{description}</p>
  <div class="flex flex-wrap gap-2 mb-4 font-mono">
    {stack.map(tech => (
      <span class="flex items-center gap-1 bg-background/80 text-cool-gray px-2 py-0.5 rounded-full text-xs font-semibold shadow-md">
        {tech === 'HTML' && <i class="fa-brands fa-html5"></i>}
        {tech === 'PWA' && <i class="fa-solid fa-mobile-screen-button"></i>}
        {tech === 'JavaScript' && <i class="fa-brands fa-js"></i>}
        {tech === 'CSS' && <i class="fa-brands fa-css3-alt"></i>}
        {tech === 'React' && <i class="fa-brands fa-react"></i>}
        {tech === 'Astro' && <i class="fa-solid fa-star"></i>}
        {tech === 'Tailwind CSS' && <i class="fa-solid fa-wind"></i>}
        <span>{tech}</span>
      </span>
    ))}
  </div>
  <div class="flex gap-4 mt-auto">
    {source && source !== "#" && source !== "" && (
      <a href={source} target="_blank" rel="noopener" class="bg-blue-700 text-white font-bold px-6 py-2 rounded-lg shadow hover:bg-blue-800 transition-colors duration-200 flex items-center gap-1">
        <i class="fa-brands fa-github"></i> Source
      </a>
    )}
    {demo && demo !== "" && (
      <a href={demo} target="_blank" rel="noopener" class="bg-blue-700 text-white font-bold px-6 py-2 rounded-lg shadow hover:bg-blue-800 transition-colors duration-200 flex items-center gap-1">
        <i class="fa-solid fa-arrow-up-right-from-square"></i> Live
      </a>
    )}
  </div>
</article> 