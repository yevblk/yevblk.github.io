---
import UnifiedCard from './UnifiedCard.astro';
export interface Props {
  title: string;
  description: string;
  task: string;
  approach: string;
  technologies: string[];
  result: string;
  roles: string[];
  source?: string;
  demo?: string;
  image?: string;
  slot?: string;
}
const { title, description, task, approach, technologies, result, roles, source, demo, image, slot } = Astro.props;
---
<UnifiedCard mode="detailed" title={title} description={description} task={task} approach={approach} technologies={technologies} result={result} roles={roles} source={source} demo={demo} image={image} slot={slot} /> 